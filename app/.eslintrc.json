{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "env": {
      "node": true,
      "browser": true,
      "jest": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ],
      "no-useless-catch": 0,
      "no-unused-declaration": true
    },
    "extends": ["plugin:@typescript-eslint/recommended", "plugin:prettier/recommended"]
  }